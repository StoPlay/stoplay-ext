 {
  "manifest_version": 2,
  "name": "_StoPlay",
  "version": "0.1",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content.js", "vk.com.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://vk.com/*"
  ],
  "web_accessible_resources": [
    "vk.com.js"
  ],

  "browser_action": {
    "default_title": "StoPlay",
    "default_icon": "img/icon48.png"
    // "default_popup": "popup.html"
  }
    
}